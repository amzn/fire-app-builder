<resources>

     <string translatable="false" name="browse_title"><![CDATA[TenFootUI]]></string>

    <!-- Default App Colors -->

    <!-- The background color of the screens. -->
    <color name="background">#111111</color>
    <!-- Used for card background. -->
    <color name="card_background">#2B2B2B</color>
    <!-- The color of button highlights and widgets. -->
    <color name="accent">#F5CE49</color>
    <!-- Used for the text of a selected item's title and description.
         Also used for button text, Splash screen text, and read more dialog text. -->
    <color name="primary_text">#E6FFFFFF</color>
    <!-- Used for the text on the card views and playback progress bar text. -->
    <color name="secondary_text">#FFFFFFFF</color>
    <!-- Used for the category titles and content subtitles -->
    <color name="tertiary_text">#99FFFFFF</color>

    <!-- End of App Colors -->

    <!-- Splash Screen Customization -->

    <!-- Background image for splash screen -->
    <drawable name="splash_background">@color/background</drawable>
    <!-- Company logo to show on Splash Screen -->
    <drawable name="splash_logo">@drawable/stashtv_medium_logo</drawable>
    <!-- Color of splash screen loader -->
    <color name="spinner_color">#FFFFFFFF</color>
    <!-- Alpha of spinner -->
    <integer name="spinner_alpha">60</integer>
    <!-- color of loading and reloading text-->
    <color name="feed_loading">@color/primary_text</color>
    <!-- Copyright string text color -->
    <color name="copyright">@color/primary_text</color>

    <!-- End of Splash Screen Customization -->

    <!-- Browse Customization -->

    <!-- The header's bar color (left-hand navigation bar) -->
    <color name="browse_headers_bar">@color/background</color>
    <!-- Non-selected header text color -->
    <color name="browse_header">@color/tertiary_text</color>
    <!-- Header color when left-hand navigation bar is closed
         and rows are showing full screen -->
    <color name="browse_row_header">@color/tertiary_text</color>
    <!-- Action widget and search orb background color -->
    <color name="search_orb">@color/accent</color>
    <!-- Header text size -->
    <dimen name="browse_header_text">16sp</dimen>
    <!-- Company logo -->
    <drawable name="company_logo">@drawable/stashtv_medium_logo</drawable>
    <!-- App icon -->
    <drawable name="app_logo">@mipmap/ic_launcher</drawable>
    <!-- Background color -->
    <color name="browse_background_color">@color/background</color>

    <!-- End of Browse Customization -->

    <!-- Movie Info Card Customization -->

    <!-- Background color of the card info -->
    <color name="card_info_bg">@color/card_background</color>
    <!-- Card info title text color -->
    <color name="card_info_title_text">@color/primary_text</color>
    <!-- Card info content text color -->
    <color name="card_info_content_text">@color/secondary_text</color>
    <!-- Card info title text size -->
    <dimen name="card_info_title_text">8sp</dimen>
    <!-- Card info content text size -->
    <dimen name="card_info_content_text">12sp</dimen>
    <!-- Card info selected title text size -->
    <dimen name="card_info_selected_title_text">10sp</dimen>
    <!-- Card info selected content text size -->
    <dimen name="card_info_selected_content_text">15sp</dimen>

    <!-- End of Movie Info Card Customization -->

    <!-- Details Customization -->

    <!-- Text color for unfocused action button -->
    <color name="action_button_text_color">@color/primary_text</color>
    <!-- Text color for focused action button -->
    <color name="action_button_text_color_focused">@color/primary_text</color>
    <!-- Background color for focused action button -->
    <drawable name="action_button_focused">@drawable/btn_generic_focused</drawable>
    <!-- Background color for normal state of action button -->
    <drawable name="action_button_normal">@drawable/btn_normal</drawable>
    <!-- Details description title text color -->
    <color name="details_description_title">@color/primary_text</color>
    <!-- Details description subtitle text color -->
    <color name="details_description_subtitle">@color/tertiary_text</color>
    <!-- Details description body text color -->
    <color name="details_description_body">@color/primary_text</color>
    <!-- Details description extended body text color -->
    <color name="details_description_extended">@color/primary_text</color>
    <!-- Action button text size -->
    <dimen name="action_text">14sp</dimen>
    <!-- Details description title text size -->
    <dimen name="details_description_title_text">24sp</dimen>
    <!-- Details description subtitle text size -->
    <dimen name="details_description_subtitle_text">10sp</dimen>
    <!-- Details description body text size -->
    <dimen name="details_description_body_text">16sp</dimen>
    <!-- Details description extended body text size -->
    <dimen name="details_description_extended_text">15sp</dimen>
    <!-- End of Details Customization -->

    <!-- Playback Overlay Customization -->

    <!-- Background color of the playback overlay -->
    <color name="playback_background">@color/background</color>
    <!-- Background color of the progress bar -->
    <color name="playback_background_progress_bar">#FF373737</color>
    <!-- Color of buffered progress bar -->
    <color name="playback_buffered_progress">#FF5A5A5A</color>
    <!-- Color of the progress bar -->
    <color name="progress_bar">#FFDADADA</color>
    <!-- Text color of the playback time -->
    <color name="playback_time_text">@color/secondary_text</color>
    <!-- Hide More options status activation status-->
    <bool name="hide_more_options">true</bool>

    <!-- End of Playback Overlay Customization -->

    <!-- Search Bar Customization -->

    <!-- Icon to display inside of search orb -->
    <drawable name="search_icon">@drawable/ic_search</drawable>
    <!-- Background color of Search screen -->
    <drawable name="search_background">@drawable/bg_gradient_search</drawable>

    <!-- End of Search Bar Customization -->

    <!-- Error Activity Customization -->

    <dimen name="error_message_text_size">16sp</dimen>
    <color name="error_message_text_color">@color/primary_text</color>
    <integer name="error_button_height">64</integer>

    <!-- End of Error Activity Customization -->


    <!-- Content Reload time in milliseconds -->

    <integer name="time_to_reload_content">14400000</integer>

    <!-- End Content Reload time in milliseconds -->

    <!-- Drm encryption schema, Allowed options are ENCRYPTION_DEFAULT, ENCRYPTION_PLAYREADY,
    ENCRYPTION_WIDEVINE -->
    <string name="drm_encryption_schema">ENCRYPTION_DEFAULT</string>

</resources>
